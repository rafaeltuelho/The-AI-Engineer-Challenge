{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/dist"
      }
    },
    {
      "src": "api/app.py",
      "use": "@vercel/python",
      "config": {
        "includeFiles": [
          "api/**",
          "aimakerspace/**",
          "pyproject.toml",
          "uv.lock"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/app.py"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "functions": {
    "api/app.py": {
      "maxDuration": 30
    }
  }
} 
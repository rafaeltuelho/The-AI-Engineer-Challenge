{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/dist"
      }
    },
    {
      "src": "api/app.py",
      "use": "@vercel/python",
      "config": {
        "includeFiles": [
          "api/pdf_rag_lightweight.py",
          "aimakerspace/**",
          "pyproject.toml",
          "uv.lock"
        ],
        "maxDuration": 30
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/app.py"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ]
} 